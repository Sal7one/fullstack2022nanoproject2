{
  "compilerOptions": {
    "types": ["jasmine","node"],
    "target": "es5", 
    "module": "commonjs", 
    "lib": ["ES6", "DOM"],
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                   
    "skipLibCheck": true,    
    "outDir": "./build", 
    "noImplicitAny": true                  
  },
  "include": ["src/**/*","tests/**/*"],
  "exclude": ["node_modules", "./build"],
  "compileOnSave": true
}
